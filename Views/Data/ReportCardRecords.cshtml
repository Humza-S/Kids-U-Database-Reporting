<head ng-app="kidsu">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Report Card Records - Kids-U Data Entry Application</title>

	<link href="/Content/css/bootstrap.css" rel="stylesheet" />
   	<link href="/Content/css/Site.css" rel="stylesheet" />
	<link href="/Content/css/bootstrap-datepicker3.css" rel="stylesheet" />
	
    <script src="/Scripts/site.js"></script>
</head>

<body>
    <!--navigation-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kids-U Data Entry", "Directory", "Home", null, new{@class = "navbar-brand"})
            </div>

            <!--links-->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Student Enrollment", "Students", "Data")</li>
                    <li>@Html.ActionLink("Outcomes", "OutcomeMeasurements", "Data")</li>
                    <li>@Html.ActionLink("Report Cards", "ReportCardRecords", "Data")</li>
                </ul>

                <!--logout-->
                <form action="/Login/LogOff" class="navbar-right" id="logoutForm" method="post">
                    <input name="__RequestVerificationToken" type="hidden" value=""/>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a>Hello admin@kids-u.org!</a></li>
                        <li>@Html.ActionLink("Log off", "Index","Login")</li>
                    </ul>
                </form>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <h2>Report Card Records</h2>

        <!--search/filter/sort-->
        <div class="tabletop">
	        <div id="left">
		        <a href="/ReportCardRecords/Create">Create New</a>
		        <a href="/ReportCardRecords/Export">Export</a>

                <!--sort-->
		        <select>
				        <option value="1">Sort by...</option>
				        <option value="2">to-do</option>
			        </select>
	        </div>

            <!--search-->
	        <div id="search">
		        <input type="text" placeholder="Search...">
                <button type="button" onclick="showHide()">Adv.</button>
		        <button type="submit">Go</button>
	        </div>
        </div>

        <!--table-->
        <table class="table">
            <tr>
                <th>School Year</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th>
            </tr>
            <!--entries-->
        </table>
        <hr/>

		<footer>
			Site Built at <a href="http://www.dallasgivecamp.org">Dallas GiveCamp</a> | Hosting Donated by <a href="http://www.everleap.com">Everleap</a>
		</footer>
    </div>
</body>