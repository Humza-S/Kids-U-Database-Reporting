

<body>


    <div class="container body-content">
        <h2>Schools</h2>

        <!--form-->
        <form action="/Schools/Create" method="post">
            <div class="form-horizontal">
                <h4>Create New</h4><hr />

                <!--name-->
                <div class="form-group">
                    <label class="control-label col-md-2" for="Name">School Name</label>
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="Name" name="Name" type="text" value="" />
                    </div>
                </div>

                <!--active-->
                <div class="form-group">
                    <label class="control-label col-md-2" for="IsActive">Active</label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <input class="check-box" id="IsActive" name="IsActive" type="checkbox" value="true" />
                            <input name="IsActive" type="hidden" value="false" />
                        </div>
                    </div>
                </div>

                <!--district-->
                <div class="form-group">
                    <label class="control-label col-md-2" for="SchoolDistrictId">School District</label>
                    <div class="col-md-10">
                        <select class="form-control" id="SchoolDistrictId" name="SchoolDistrictId">
                            <option value="">Select District</option>
                            <option value="">Generate at Runtime</option>
                            <option value="1">Dallas ISD</option>
                            <option value="2">Richardson ISD</option>
                            <option value="6">Carrollton/Farmers Branch ISD</option>
                            <option value="7">Duncanville ISD</option>
                            <option value="8">Arlington ISD</option>
                        </select>
                    </div>
                </div>

                <!--submit-->
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>

        <!--back-->
        <div>
            @Html.ActionLink("Back to List", "Schools", "Data")
        </div>

    </div>
</body>

