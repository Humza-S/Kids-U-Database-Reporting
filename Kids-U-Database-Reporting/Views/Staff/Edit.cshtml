
@model ApplicationUser
@ViewBag.Roles
@{
    ViewData["Title"] = "Edit";
}

<body>
    <div class="container body-content">
        <h2>Edit Staff</h2>
    </div>
        <form asp-controller="Staff" asp-action="FinalizeEdit" method="post">
            <div>

                <label>First Name</label>
                <input asp-for="FirstName" model.FirstName />
            </div>
            <div>
                <label>Last Name</label>
                <input asp-for="LastName" model.LastName />
            </div>
            <div>
                <label>Email</label>
                <input asp-for="Email" model.Email />
            </div>
            <div>
                <label asp-for="Site">Site</label>
                <input asp-for="Site" model.Site />
            </div>
            <div>
                <label>Role</label>
                <select asp-for="Role">
                    <option value="Global Administrator">Global Administrator</option>
                    <option value="Site Administrator">Site Administrator</option>
                    <option value="Site Volunteer">Site Volunteer</option>
                </select>
            </div>
            <div>
                <label asp-for="Active">Active</label>
                <select asp-for="Active">
                    <option value="False">Inactive </option>
                    <option value="True">Active </option>
                </select>
            </div>
            <button type="submit" formmethod="post">Edit</button>
        </form>
</body>
