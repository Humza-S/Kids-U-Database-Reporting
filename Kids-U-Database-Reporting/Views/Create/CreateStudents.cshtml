                        </select>
                    </div>
                </div>

                <!--Facility-->
                <!--TODO: DYNAMICALLY ALLOCATE THIS LIST-->
                <div class="form-group">
                    <label class="control-label col-md-2">KU Site</label>
                    <div class="col-md-10">
