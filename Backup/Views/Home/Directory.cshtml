<head ng-app="kidsu">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page - Kids-U Data Entry Application</title>

    <link href="/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="/Content/css/Site.css" rel="stylesheet" />
    <link href="/Content/css/bootstrap-datepicker3.css" rel="stylesheet" />

    <script src="/Scripts/site.js"></script>
</head>

<body>
    <!--navigation-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kids-U Data Entry", "Directory", "Home", null, new{@class = "navbar-brand"})
            </div>

            <!--links-->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Student Enrollment", "Students", "Data")</li>
                    <li>@Html.ActionLink("Outcomes", "OutcomeMeasurements", "Data")</li>
                    <li>@Html.ActionLink("Report Cards", "ReportCardRecords", "Data")</li>
                </ul>

                <!--logout-->
                <form action="/Login/LogOff" class="navbar-right" id="logoutForm" method="post">
                    <input name="__RequestVerificationToken" type="hidden" value=""/>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a>Hello admin@kids-u.org!</a></li>
                        <li>@Html.ActionLink("Log off", "Index","Login")</li>
                    </ul>
                </form>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <!--display-->
        <div class="jumbotron row">
            <div class="col-md-3">
                <a class="logo" href="http://www.kids-u.org/">
                    <img src="/Content/img/dcl_logo_21.png" />
                </a>
            </div>
            <div class="col-md-9">
                <h1>Kids-U Data Entry Portal</h1>
                <p class="lead">Welcome!</p>
            </div>
        </div>

        <!--directory-->
        <div class="row">
            <div class="col-md-5">
                <h2>Data Entry</h2>
                <p>@Html.ActionLink("Student Enrollment", "Students", "Data")</p>
                <p>@Html.ActionLink("Outcomes", "OutcomeMeasurements", "Data")</p>
                <p>@Html.ActionLink("Report Cards", "ReportCardRecords", "Data")</p>
            </div>
            <div class="col-md-5">
                <h2>Management</h2>
                <p>@Html.ActionLink("Staff Directory", "Staff", "Data")</p>
                <p>@Html.ActionLink("Program/Facility Sites", "Sites", "Data")</p>
                <p>@Html.ActionLink("Organizations", "Organizations", "Data")</p>
                <p>@Html.ActionLink("School Districts", "SchoolDistricts", "Data")</p>
                <p>@Html.ActionLink("Schools", "Schools", "Data")</p>  
            </div>

        </div>
        <hr/>

        <footer>
            Site Built at <a href="http://www.dallasgivecamp.org">Dallas GiveCamp</a> | Hosting Donated by <a href="http://www.everleap.com">Everleap</a>
        </footer>
    </div>
</body>